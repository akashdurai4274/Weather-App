######################################
# Database
######################################

# Local development (PostgreSQL)
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/weather_db

# Production / Cloud (Neon, Railway, Supabase, etc.)
DATABASE_URL=postgresql+asyncpg://username:password@host:5432/database_name


######################################
# JWT Configuration
######################################

# Secret key used to sign JWT tokens
# Generate a long random string in production
JWT_SECRET_KEY=change-this-jwt-secret-key


######################################
# Weather API (WeatherBit via RapidAPI)
######################################

# RapidAPI key for WeatherBit
RAPIDAPI_KEY=your-rapidapi-key-here

# RapidAPI host (do not change unless API changes)
RAPIDAPI_HOST=weatherbit-v1-mashape.p.rapidapi.com


######################################
# Admin Configuration
######################################

# Used for admin bootstrap / privileged operations
ADMIN_SECRET_KEY=change-this-admin-secret


######################################
# CORS Configuration
######################################

# Allowed frontend origins (JSON array)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
